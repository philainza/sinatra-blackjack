<% if @empty_bankroll %>
  <p class="cards">
    <strong>Start Over?</strong>
    <a href="/new_player" class="btn btn-primary">Yes</a>
    <a href="/game_over" class="btn">No</a>
  </p>
<% end %>

<% if @empty_bankroll != true %>
  <div id="bet_page">
    <h3>Make a bet for this round.</h3>
    <p><%= session[:player_name] %> has $<%= session[:player_pot].to_i %></p>
    <form action='/bet' method='post'>
      <input type="text" name="bet_amount" />
      <br/>
      <input type="submit" id="bet_button" value="Make a bet" class="btn" />
    </form>
  </div>
<% end %>